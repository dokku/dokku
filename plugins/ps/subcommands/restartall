#!/usr/bin/env bash
set -eo pipefail
[[ $DOKKU_TRACE ]] && set -x
source "$PLUGIN_CORE_AVAILABLE_PATH/common/functions"
source "$PLUGIN_AVAILABLE_PATH/ps/internal-functions"

cmd-ps-restartall() {
  declare desc="restarts all apps via command line"
  local cmd="ps:restartall"

  fn-ps-parallel-cmd "restart"
}

cmd-ps-restartall "$@"
